<div class="index-box">
 <h1 class="index-h1">Books</h1>
  <table>
    <thead>
     <tr>
       <th class="index-title">Title</th>
       <th class="index-body">Body</th>
       <th class="index-button" colspan="3"></th>
     </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
      <tr>
        <td class="td-box"><%= book.title %></td>
        <td class="td-box"><%= book.body %></td>
        <td class="td-button">
          <%= link_to "Show", book_path(book.id) %>
        </td>
        <td class="td-button">
          <%= link_to "Edit", edit_book_path(book.id) %>
        </td>
        <td class="td-button">
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
     <% end %>
    </tbody>
  </table>

 <h2 class="index-new">New book</h2>

 <% if @book.errors.any? %>
  <div class="error-info">
  <h2 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
   <ul class="error-ul">
    <% @book.errors.full_messages.each do |message| %>
     <li class="error-list"><%= message %></li>
    <% end %>
   </ul>
  </div>
 <% end %>

 <%= form_with model: @book do |f| %>
 <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
  <div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
  </div>
 <div class="action">
  <%= f.submit 'Create Book' %>
 </div>
 <% end %>
</div>